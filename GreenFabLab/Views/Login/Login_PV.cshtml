<section id="aboutus" class="aboutus margin-top-120">
    <div class="container">
        <section class="row">
            <div class="col-sm-12">
                <div class="head_title text-center margin-top-80">
                    <h1>Login</h1>
                </div><!-- End of head title -->
                <div class="main_about_area">
                    <div>
                        <!-- The form is placed inside the body of modal -->
                        @using (Ajax.BeginForm("LoginDetails", "Login", new AjaxOptions { UpdateTargetId = "Loginresult", OnSuccess = "ClosePopupOnSuccess" }, new { id = "loginForm", @class = "form-horizontal" }))
            {

                            @*<form id="loginForm" method="post" class="form-horizontal">*@
                            <div class="form-group">
                                <label class="col-xs-3 control-label">Username <span class="mandatory">*</span></label>
                                <div class="col-xs-5">
                                    @* <input type="text" class="form-control" name="username" />*@
                                    @Html.TextBoxFor(model => model.Username, new { maxlength = "25", @class = "form-control", autofocus = "autofocus" })
                                    @*<section>
                                            <label class="label">Username </label>
                                            <label class="input">
                                                @Html.TextBoxFor(model => model.Username, new { maxlength = "25" })
                                            </label>
                                        </section>*@
                                    @Html.ValidationMessageFor(model => model.Username)

                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-xs-3 control-label">Password <span class="mandatory">*</span></label>
                                <div class="col-xs-5">
                                    @*<input type="password" class="form-control" name="password" />*@
                                    @Html.TextBoxFor(model => model.Password, new { maxlength = "25", @class = "form-control", type = "password" })
                                    @Html.ValidationMessageFor(model => model.Password)
                                </div>
                            </div>

                            <div class="form-group ">
                                <div class="col-xs-5 col-xs-offset-3">
                                    @*<button type="submit"  class="btn btn-primary">Login</button>*@
                                    <button type="submit" id="btnPopupLogin" class="btn btn-success btn-xs" title="Login">
                                        Login
                                    </button>

                                    <button id="btnPopupCancel" class="btn btn-link btn-xs " title="Cancel">
                                        Cancel
                                    </button>

                                </div>

                            </div>
                            <section>@Html.Partial("_Mandatory") </section>

                            @*</form>*@
                        }
                    </div>
                </div>
            </div>
        </section>
    </div>
    </section>
